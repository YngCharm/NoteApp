<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.noteapp.controllers.LoginController">
    <Label layoutX="264.0" layoutY="61.0" prefHeight="53.0" prefWidth="74.0" text="Вход">
        <font>
            <Font name="Calibri Light" size="36.0"/>
        </font>
    </Label>
    <PasswordField fx:id="loginPassword" layoutX="182.0" layoutY="183.0" prefHeight="25.0" prefWidth="237.0"
                   promptText="пароль"/>
    <TextField fx:id="loginLogin" layoutX="182.0" layoutY="137.0" prefHeight="25.0" prefWidth="237.0"
               promptText="логин"/>
    <Button layoutX="182.0" layoutY="241.0" mnemonicParsing="false" onAction="#entranceButtonClick"
            text="Зарегистрироваться"/>
    <Label layoutX="182.0" layoutY="215.0" onMouseClicked="#entranceLabelClick" prefHeight="17.0" prefWidth="191.0"
           text="еще не зарегистрированы ?" textFill="#2600ff"/>
</AnchorPane>
