<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.noteapp.controllers.RegistrationController">
   <Label layoutX="196.0" layoutY="58.0" prefHeight="53.0" prefWidth="208.0" text="Регистрация" textFill="#282828">
      <font>
         <Font name="Calibri Light" size="36.0"/>
      </font>
   </Label>
   <PasswordField fx:id="registrationPassword" layoutX="182.0" layoutY="235.0" prefHeight="25.0" prefWidth="237.0"
                  promptText="пароль"/>
   <TextField fx:id="registrationLogin" layoutX="182.0" layoutY="137.0" prefHeight="25.0" prefWidth="237.0"
              promptText="логин"/>
   <TextField fx:id="registrationEmail" layoutX="182.0" layoutY="188.0" prefHeight="25.0" prefWidth="237.0"
              promptText="почта"/>
   <Button layoutX="182.0" layoutY="293.0" mnemonicParsing="false" onAction="#registrationButtonClick"
           text="Зарегистрироваться"/>
   <Label layoutX="182.0" layoutY="267.0" onMouseClicked="#registeredLabelClick" prefHeight="17.0" prefWidth="191.0"
          text="Уже зарегистрированы ?" textFill="#2600ff"/>
</AnchorPane>
